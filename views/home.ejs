<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
</head>
<body>
    <h1>hey from home page</h1> 
    <% if (locals.id) { %>
      <p>URL Generated http://localhost:8080/url/<%= id %></p>
    <% } %>
    <div>
        <form method="post" action="/url">
            <label for="url">Enter Your Original Url:-</label>
            <input type="text" name="url" id="urlin" placeholder="https://exaple.com">
            <button type="submit">Generate</button>
        </form>
    </div>
    <br>
    <div>
     <% if (locals.urls) { %>
        <table>
         
                <thead>
                    <th>Sl no.</th>
                    <th>Short Id</th>
                    <th>Redirect</th>
                    <th>Total Click</th>
                </thead>
            <tbody>
                <% urls.forEach((url,index) => { %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%=url.shortId %></td>
                        <td><%=url.redirectUrl %></td>
                        <td><%=url.visitHistory.length %></td>
                   </tr>
                 
                <% }) %>
            </tbody>
        
        </table>
      
     <% } %>
    </div>
    
</body>
</html>